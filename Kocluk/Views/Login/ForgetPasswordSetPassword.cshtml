@using Kocluk.Dto;
@model ForgetPasswordSetPasswordDto
@{
    ViewData["Title"] = "Şifremi Unuttum";
}

<div class="row">
    <div class="col-4 offset-4">
        <h1 class="display-4 border-bottom text-center pb-4"><i class="fa-solid fa-right-to-bracket"></i> @ViewData["Title"] </h1>
    </div>
</div>


@if (TempData["ForgetSetPasswordSuccessMessage"] != null)
{
    <div class="row">
        <div class="col-4 offset-4 mt-3">
            <div class="alert alert-success">
                @TempData["ForgetSetPasswordSuccessMessage"]
            </div>
        </div>
    </div>
}



@if (TempData["ForgetSetPasswordErrorMessage"] != null)
{
    <div class="row">
        <div class="col-4 offset-4 mt-3">
            <div class="alert alert-danger">
                @TempData["ForgetSetPasswordErrorMessage"]
            </div>
        </div>
    </div>
}


<div class="row">
    <div class="col-4 offset-4 mt-3">
        <form method="POST" asp-controller="Login" asp-action="PasswordUpdate">
            <div asp-validation-summary="ModelOnly" class="text-danger small">
            </div>
            <div class="form-group mb-3">
                <input type="hidden" asp-for="id" />
            </div>
            <div class="form-group mb-3">

                <label asp-for="Sifre" class="form-label">Yeni Şifre</label>
                <input asp-for="Sifre" class="form-control" placeholder="Yeni Şifre" />
                <span asp-validation-for="Sifre" class="text-danger small"></span>
            </div>
            <div class="form-group d-grid mb-3 mt-3">
                <button type="submit" class="btn btn-primary d-block">Şifreyi Yenile</button>
            </div>
        </form>
    </div>
</div>