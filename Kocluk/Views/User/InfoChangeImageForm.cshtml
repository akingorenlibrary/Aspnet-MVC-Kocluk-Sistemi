@using Kocluk.Dto;
@model UserProfileImageUpdate
@{
    ViewData["Title"] = "Güncelle";
}

@if (TempData["UpdateFormSuccessMessage"] != null)
{
    <div class="row">
        <div class="col-4 offset-4 mt-3">
            <div class="alert alert-success">
                @TempData["UpdateFormSuccessMessage"]
            </div>
        </div>
    </div>
}

@if (TempData["UpdateFormErrorMessage"] != null)
{
    <div class="row">
        <div class="col-4 offset-4 mt-3">
            <div class="alert alert-danger">
                @TempData["UpdateFormErrorMessage"]
            </div>
        </div>
    </div>
}

<div class="row">
    <div class="col-4 offset-4 mt-3">
        <form method="POST" asp-controller="User" asp-action="ProfileImageUpdate" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger small">
            </div>

            <div class="form-group mb-3">
                <label asp-for="ProfilFotografDosyasi" class="form-label">Profil Fotoğrafı Yükle</label>
                <input asp-for="ProfilFotografDosyasi" type="file" accept="image/*" class="form-control" />
                <span asp-validation-for="ProfilFotografDosyasi" class="text-danger small"></span>
            </div>

            <div class="form-group d-grid mb-3 mt-3">
                <button type="submit" class="btn btn-primary d-block">Güncelle</button>
            </div>
        </form>
    </div>
</div>